                                            <TextBox x:Name="txtbxAns1AB_A" Padding="0,10,0,0" TextChanged="txtbxAns1AB_A_TextChanged" Width="100" Height="40"/>
                                            <Separator Foreground="Black"  Margin="5,10"/>
